{
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "es/*", "doc/*", "__tests__/*"]
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "allowBranch": "dev",
      "includeMergedTags": true
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent"
}