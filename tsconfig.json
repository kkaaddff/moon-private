{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "noEmit": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es2015", "es2017", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@vue/compat": ["packages/vue-compat/src"],
      "@vue/*": ["packages/*/src"],
      "@core": ["packages/core/src"]
    }
  },
  "exclude": ["node_modules"]
}
